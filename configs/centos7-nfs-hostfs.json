{
"apiVersion": "v1beta3",
"kind": "Pod",
"metadata": {"name":"centos7-nfs-hostfs"},
"spec":{
"containers":[
    {
    "name": "c1",
    "image": "centos",
    "command": [
              "/bin/sh",
              "-c",
              "./scripts/run-chef-solo.sh"
        ],
    "env": [
            {
              "name": "ROOT_PASS",
              "value": "vagrant"
            }
       ],
    "ports":[
      { "name": "ssh",
        "containerPort": 22,
        "hostPort": 442}
        ],
    "resources": {
          "limits": {
            "cpu": "2"
          }
        },
    "volumeMounts": [
      { "name": "podshare",
        "mountPath": "/x/podshare",
        "readOnly": false},

      { "name": "usrsoftware",
        "mountPath": "/usr/software",
        "readOnly": true},

      { "name": "noarch",
        "mountPath": "/x/noarch",
        "readOnly": true}
        ]
    }
],
"volumes":[
  { "name": "podshare",
    "hostPath": {
        "path": "/x/podshare"}
  },
  { "name": "usrsoftware",
    "nfs": {
        "server": "10.11.12.13",
        "path": "/vol/x86_64-redhat-rhel6"}
  },
  { "name": "noarch",
    "nfs": {
        "server": "14.15.16.17",
        "path": "/vol/rats"}
  }
]
}
}
